<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form_alphabot" model="ir.ui.view">
			<field name="name">res.config.settings.view.alphabot</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="account.res_config_settings_view_form"/>
			<field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="alphabot_invoicing">
                        <div class="o_setting_left_pane">
                            <field name="alphabot_fiscal_data"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="alphabot_fiscal_data"/>
                            <div class="text-muted">
                                Habilitar campos impresora fiscal
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="alphabot_manual_printing-div">
                        <div class="o_setting_left_pane">
                            <field name="alphabot_manual_printing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="alphabot_manual_printing"/>
                            <div class="text-muted">
                                Botón para impresión fiscal
                            </div>
                        </div>
                    </div>
                </xpath>
			</field>
		</record>
    </data>
</odoo>
